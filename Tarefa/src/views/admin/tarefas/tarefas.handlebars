<main>
    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <h2> Lista de Tarefas </h2>
            <hr>
            <a href="/rota_tarefas/tarefas/add">
                <button class="btn btn-success"> Nova Tarefa </button>
            </a>
            {{#each tarefas}}
            <div class="card mt-4">
                <div class="card-body">
                    <h4><b> ID: </b> {{_id}}</h4>
                    <small><b> Nome: </b>{{nome}}</small>
                    <br>
                    <small><b>Descrição: </b>{{descricao}}</small>
                    <br>
                    <!--Botão para editar tarefas-->
                </div>
            </div>
        </div>
    </div>
</main>